<%- include('../include/header.ejs',{pageTitle:pageTitle})%>
<link rel="stylesheet" href="/css/prod-detail.css">

<body style="text-align:center">
    <%- include('../include/navbar.ejs',{path:path,isAuthenticated:isAuthenticated})%>
    <div class="container">
        <h3><%=product.title %></h3>
        <div><img class="prod-det-img img-fluid" src="<%= product.imgUrl %>">
        </div>
        <h1>Price(in <i class="fas fa-rupee-sign"></i>) : <%= product.price %></h1>
        <div>
            <p><%= product.desc %></p>
        </div>
    </div>
    <script src="/js/main.js"></script>
    <script>
        let output = document.getElementById("output");
        typeIt("<%= product.title %>", output, 200); //(string,targetElement,time(in sec))
    </script>
    <%- include('../include/footer.ejs')%>
</body>